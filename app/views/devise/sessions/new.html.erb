<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Log In</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: 'form-control input-lg', autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control input-lg', autocomplete: "off" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <br />
        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      <% end %>
      
      <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      
    </div>
  </div>
</div>









